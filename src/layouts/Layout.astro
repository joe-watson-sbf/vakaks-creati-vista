---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="VAKAKS Tools" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
		color: #1e293b;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.big-title {
		font-size: max(3rem, 10vw);
		font-weight: 600;
		margin-top: 1rem;
		margin-bottom: 1rem;
	}
	.title {
		font-size: max(2rem, 5vw);
		font-weight: 600;
		margin-top: 1rem;
		margin-bottom: 1rem;
	}
	.sub-title {
		font-size: max(1.5rem, 3vw);
		font-weight: 300;
		margin-top: 1rem;
		margin-bottom: 1rem;
	}
	.description {
		font-size: max(1rem, 2vw);
		margin-top: 1rem;
		margin-bottom: 1rem;
	}
</style>
